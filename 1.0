(#!/usr/bin/env python3)
# Kalkulator sederhana: jumlah, kurang, kali, bagi
def add(a, b):
	return a + b

def sub(a, b):
	return a - b

def mul(a, b):
	return a * b

def div(a, b):
	if b == 0:
		raise ZeroDivisionError("Pembagian dengan nol tidak diperbolehkan.")
	return a / b


def main():
	print("Kalkulator sederhana (tambah, kurang, kali, bagi)")
	ops = {'+': add, '-': sub, '*': mul, '/': div}
	while True:
		try:
			expr = input("Masukkan operasi (contoh: 2 + 3), atau 'q' untuk keluar: ").strip()
			if expr.lower() in ('q', 'quit', 'exit'):
				print("Selesai.")
				break
			parts = expr.split()
			if len(parts) != 3:
				print("Format salah. Gunakan: angka operator angka (contoh: 2 + 3)")
				continue
			a = float(parts[0])
			op = parts[1]
			b = float(parts[2])
			if op not in ops:
				print("Operator tidak dikenali. Gunakan +, -, *, /")
				continue
			result = ops[op](a, b)
			if isinstance(result, float) and result.is_integer():
				result = int(result)
			print("Hasil:", result)
		except ValueError:
			print("Masukkan angka yang valid.")
		except ZeroDivisionError as e:
			print(e)
		except KeyboardInterrupt:
			print("\nDibatalkan. Keluar.")
			break


if __name__ == '__main__':
	main()

